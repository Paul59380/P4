*********************************************GET NEWS AND YOUR COMMENT**************************************************
if(isset($_GET['numero'])){
    if($_GET['numero'] <= 1){
        $commentManager = new CommentsManager($db);

        $comments = $commentManager->getCommentsNews($_GET['numero']);
        $newsManager = new NewsManager($db);

        $news = $newsManager->getNews($_GET['numero']);

        echo $news->getTitleNews() . '<br/>';
        echo $news->getContainsNews();

        foreach ($comments as $comment) {
            echo '<p>' . $comment->getUser()->getPseudo() . ' <br/> le ' . $comment->getDateCreate() . '<br/> Commentaire : ' .
                $comment->getContainsComment() . '<br/> Billet n°' . $comment->getNews()->getId();
        }
    }
    else {
        echo "Billet inexistant !";
    }
}
********************************************INSERT COMMENT IN DATA BASE ************************************************
if(isset($user)){
    if(isset($_POST['pseudo']) && isset($_POST['message']) && isset($_POST['send'])){
            $commentManager = new CommentsManager($db);
            $commentManager->addComment($user->getId(), $_GET['numero'], $_POST['message']);
            echo "Ce commentaire à bien été ajouté en bdd";
    }
}




*************************UPDATE DATE COMMENT FOR SIGNALED AND SEND IN REPORT COMMENT TABLE******************************
Exemple :
// IN index.php

function autoload($className)
{
    if(file_exists($path = $className.'.php')){
        require $path;
    }
}
spl_autoload_register('autoload');
$db = PDOFactory::connectedAtDataBase();
$commentManager = new CommentsManager($db);

$comments= $commentManager->getCommentsList();
foreach ($comments as $comment)
{
    $id = $comment->getId();

    echo  '<br/><a href="test.php?idComment='.$id.'"</a>' . $comment->getContainsComment();
}

// IN test.php

function autoload($className)
{
    if(file_exists($path = $className.'.php')){
        require $path;
    }
}
spl_autoload_register('autoload');

$db = PDOFactory::connectedAtDataBase();
$commentManager = new CommentsManager($db);

$updateComment = $commentManager->update($_GET['idComment']);
$insertSignaledComment = $commentManager->insertedCommentsSigned();

header('Location:index.php');

*********************************************Found User with pseudo and hashed password*********************************

function autoload($className)
{
    if(file_exists($path = $className.'.php')){
        require $path;
    }
}
spl_autoload_register('autoload');

$db = PDOFactory::connectedAtDataBase();
$manager = new UserManager($db);

if(isset($_POST['pseudo']) && isset($_POST['password']) && isset($_POST['verifier']))
{
    $data = $manager->checkAccount($_POST['pseudo'], $_POST['password']);
    $user = $manager->getUser($data['id']);

    echo '<p>Pseudo : ' .$user->getPseudo(). ' <br/> PassWord : ' .$user->getPassword() .'</p>';

}

*******************************DELETE ACCOUNT WITH THE PSEUDO AND HASHED PASSWORD***************************************

function autoload($className)
{
    if(file_exists($path = $className.'.php')){
        require $path;
    }
}
spl_autoload_register('autoload');

$db = PDOFactory::connectedAtDataBase();
$manager = new UserManager($db);

if(isset($_POST['pseudo']) && isset($_POST['password']) && isset($_POST['verifier']))
{
    $manager->deleteAccount($_POST['pseudo'], $_POST['password']);
}